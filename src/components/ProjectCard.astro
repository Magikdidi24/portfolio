---
// ProjectCard.astro
interface Props {
  project: import("astro:content").CollectionEntry<"projects">;
}
const { data } = Astro.props.project;
---
<article
  class="bg-black border border-green-500 rounded-2xl shadow-lg overflow-hidden hover:shadow-green-700 transition-shadow"
  data-matrix
>
  <img
    src={data.cover}
    alt={`Couverture du projet ${data.title}`}
    class="w-full h-61 object-cover"
  />
  <div class="px-6 pt-0 pb-6">
    <!-- Titre en effet Matrix -->
    <h2 class="text-green-300 text-2xl font-semibold mb-1 …">{data.title}</h2>

    <!-- Description -->
    <p class="text-green-300 mb-4 font-mono">
      {data.description}
    </p>

    <!-- Infos équipe / durée -->
    <div class="flex items-center text-sm text-green-400 mb-4 gap-4 font-mono">
      <span class="flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M17 20h5v-2a4 4 0 00-5-4m-4 4H4v-2a4 4 0 015-4m2 4a4 4 0 100-8 4 4 0 000 8z" />
        </svg>
        {data.teamSize} personne{data.teamSize > 1 ? 's' : ''}
      </span>
      <span class="flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <circle cx="12" cy="12" r="10" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6l4 2" />
        </svg>
        {data.timeAvailable}
      </span>
    </div>

    <!-- Stack -->
    <div class="flex flex-wrap gap-2 mb-4">
      {data.stack.map((tech: unknown) => (
        <span
          key={tech}
          class="bg-green-900/50 text-green-400 px-3 py-1 rounded-full text-xs border border-green-500/30 font-mono"
        >
          {tech}
        </span>
      ))}
    </div>

    <!-- Bouton -->
    <!--<a
      href={data.link}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block px-4 py-2 text-sm font-mono border border-green-500 text-green-400 hover:bg-green-500/10 rounded transition-colors"
    >
      Voir le code
    </a>
  </div>
</article>
